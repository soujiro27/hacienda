grisClaro=#efefef
azulObscuro=#2c3e50

body
	background grisClaro
	font-family arial
header
	background url(../img/fondo3.jpg)no-repeat
	background-size 100% 100%
	aside
		padding 2%
		text-align center
		background rgba(0,0,0,.5)
		width 10%
		display inline-block
		img
			width 100px
			height 100px
		ul
			margin 0
			padding 0
			li
				display block
				color #fff
				padding 2%
				margin 15% auto
				text-align left
			
	div.inicio
		margin 5% 0
		color #fff
		width 79%
		display inline-block
		vertical-align top
		text-align center
		h1
			font-size 60px
			font-family 'Lobster', cursive
			text-shadow 3px 3px 3px black
		h2
			color #fff
			text-shadow 3px 3px 3px black
			margin-bottom 3%
		a
			border-bottom 3px solid orange
			background azulObscuro
			color #fff
			padding 1%
			width 10%
			text-decoration none
			border-radius 5px
section.historia
	div.texto
		width 56%
		display inline-block
		vertical-align top
		text-align center
		padding 2%
		h2
			font-family 'Lobster', cursive
			color azulObscuro
			font-size 43px
			margin-bottom 9%
		p
			margin-bottom 7%
	img
		width 40%
		display inline-block

section.espacios
	background azulObscuro
	padding 1%
	color #fff
	text-align center
	h2
		font-family 'Lobster', cursive
		font-size 43px
		text-shadow 2px 2px 2px black
	p
		margin-bottom 6%
	a
		background orange
	article
		margin-top 5%
		img
			width 25%
			display inline-block
section.leyenda
	width 80%
	display block
	margin 0 auto
	padding 1%
	text-align center
	h2
		font-size 43px
		font-family 'Lobster', cursive
		color azulObscuro
	p
		margin-bottom 5%
section.ubicacion
	img
		width 100%
		height 300px
footer
	background azulObscuro
	color #fff
	text-align center
	padding 2%	

a
			border-bottom 3px solid orange
			background azulObscuro
			color #fff
			padding 1%
			width 10%
			text-decoration none
			border-radius 5px