grisClaro=#efefef
azulObscuro=#2c3e50
verde=#27ae60
rojo=#c0392b
rojoFuerte=#a71414

body
	header
		background url(../img/fondo3.jpg)no-repeat
		padding 10% 3%
		background-size 100% 100%
		color #fff
		position relative
		nav
			display none
		ul
			margin 0
			padding 0
		h1
			font-size 22px
			text-align center
			text-shadow 2px 2px 3px black
		h2
			font-size 16px
			font-style italic
			text-align center
			text-shadow 2px 2px 3px black
		&:after
			content ""
			position absolute 
			border-top 40px solid transparent
			border-left 160px solid #fff
			border-right 160px solid #fff
			border-bottom 0px solid transparent
			bottom 0
			left 0
section.historia
	h2
		text-align center
		margin 2% auto
	div.columnas
		p
			padding 2%
			font-size 16px
			margin 0
			text-align left
		
section.espacios
	background url(../img/espacios.jpg)
	background-size 100% 100%
	color #fff
	padding 2% 2% 20% 2%
	position relative
	margin-top 10%
	h2
		text-align center
		text-shadow 2px 2px 3px black
		padding-top 5%
	p
		font-weight bold
		width 90%
		margin 5px auto 30px auto
	&:before
		border-bottom 55px solid transparent
		border-top 0px solid blue
		border-right 320px solid #fff
		border-left 0px solid green
		position absolute
		content ""
		top 0
		left 0
	&:after
		content ""
		position absolute
		bottom 0
		left 0
		border-bottom 0px solid red
		border-right 320px solid #fff
		border-left 0px solid blue
		border-top 80px solid transparent
section.leyenda
	background url(../img/leyenda.jpg)
	background-size 100% 100%
	color #000
	padding 2% 2% 8% 2%
	position relative
	margin-top 10%
	
	


a
	background rojoFuerte
	border-bottom 4px solid rojo
	color #fff
	display block
	margin 2% auto
	padding 1%
	text-align center
	text-decoration none
	width 60%
